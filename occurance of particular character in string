import java.util.*;

public class HelloWorld{

     public static void main(String []args){
        String str="I am java developer I am proud of it";
        char ch='i';
      
        int count=counter(str,  ch);
        
        System.out.println("occurance of character "+ ch +" is "+ count);
        
        
         
     }
     
     public static int counter(String str, char ch){
         int count=0;
         for(int i=0;i<str.length();i++){
             if( ch==str.charAt(i)){
                 count++;
             }
             
         }
         return count;
     }
}
